<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stepby" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ikonice_navbar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Stepby.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Stepby.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stepby.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Stepby.CustomDialogTheme" parent="android:Theme.Dialog">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/navbar_blue</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="textColorAlertDialogListItem">@color/white</item>

    </style>
</resources>